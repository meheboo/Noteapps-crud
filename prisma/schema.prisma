generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  notes    Note[]
}

model Note {
  id      String @id @default(uuid())
  title   String
  content String
  userId  String
  user    User @relation(fields: [userId], references: [id])
}
